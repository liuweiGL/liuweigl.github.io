// Custom styles.

// code
code {
  border: 1px solid #999;
}

// link
a[target='_blank'] {
  color: #3194d0;
  border-bottom: 0;
  &:hover {
    text-decoration: underline;
  }
}

// list
ol {
  padding-inline-start: 1em;
}

// custom logo
.custom-logo-image {
  width: 48px;
  filter: invert(0.8);
}

// mermaid
.mermaid {
  background: transparent;
}

// markdown 自定义容器
.custom-block {
  margin: 20px 0;
  padding: 20px;
  border-left-width: 8px;
  border-left-style: solid;

  p {
    margin-bottom: 0;
  }
}

.tip {
  border-color: #42b983;
  background-color: #f3f5f7;
  @extend .custom-block;
}

.warning {
  border-color: #e7c000;
  background-color: rgba(255, 229, 100, 0.3);
  color: #6b5900;
  @extend .custom-block;
}

.danger {
  border-color: #c00;
  background-color: #ffe6e6;
  color: #4d0000;
  @extend .custom-block;
}

// back to top
.back-to-top {
  .fa-arrow-up::before {
    content: '回到顶部';
  }
}